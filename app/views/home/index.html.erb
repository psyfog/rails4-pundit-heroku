<div class="row">
<div class="col-md-6 col-sm-6"><% @users.each do |user| %>
  <div><div class="userdiv" style="border-bottom-style: dashed; border-width: 5px; width: 50%; padding: 20px;"> <p><%= image_tag(user.avatar, :align => 'left') if user.avatar? %></p>
    <p>User: <%= user.name %>
    
    <p><%=link_to user.email, user %></p>
    <p>Role: <%= user.role unless user.role.nil? %></p>
</div></div>
  <% end %></div>

</div>